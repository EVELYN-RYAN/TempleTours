@{
    ViewData["Title"] = "Sign Up";
}
<h1>Sign Up</h1>

@model Appointment

<div class="text-right">
    <form method="post" asp-controller="Home" asp-action="Form">
        <h2>Enter your details here to book an appointment</h2>

        <br />
        <!--Put date value from signup page here-->
        <label>@*@Model.Date*@</label>
        <br />
        <label asp-for="GroupName">Group Name:</label>
        <input asp-for="GroupName" />
        <br />
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" />
        <br />
        <label asp-for="Phone">Phone:</label>
        <input asp-for="Phone" />
        <br />
        <label asp-for="PartySize">Party Size:</label>
        <input asp-for="PartySize" />
        <br />
        <br />
        <button type="submit" class="btn btn-success btn-sm">Confirm Appointment</button>

        <br />
        <br />
        <div asp-validation-summary="All"></div>
    </form>
</div>